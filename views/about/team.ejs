<%- include('../partials/head') %>
<%- include('../partials/header') %>
<% locals.pageTitle = t('aboutTeam.pageTitle'); locals.pageSubtitle = t('aboutTeam.pageSubtitle'); locals.breadcrumb = [{label: t('aboutTeam.breadcrumbParent'), url: (locals.langPrefix || '') + '/about'}, {label: t('aboutTeam.breadcrumbCurrent')}]; %>
<%- include('../partials/page-hero') %>

<!-- TEAM INTRO -->
<section class="section">
  <div class="container">
    <div class="section-header">
      <span class="section-label"><%= t('aboutTeam.introLabel') %></span>
      <h2><%= t('aboutTeam.introTitle') %></h2>
      <p><%= t('aboutTeam.introText') %></p>
    </div>
  </div>
</section>

<!-- TEAM DEPARTMENTS -->
<section class="section section-dark">
  <div class="container">
    <div class="section-header">
      <span class="section-label"><%= t('aboutTeam.deptLabel') %></span>
      <h2><%= t('aboutTeam.deptTitle') %></h2>
      <p><%= t('aboutTeam.deptText') %></p>
    </div>
    <div class="team-grid">

      <!-- CEO -->
      <div class="team-card">
        <div class="team-card-icon">
          <i class="fas fa-crown"></i>
        </div>
        <h3><%= t('aboutTeam.ceoTitle') %></h3>
        <span style="color:var(--accent);font-weight:600;display:block;margin-bottom:12px;"><%= t('aboutTeam.ceoSubtitle') %></span>
        <p><%= t('aboutTeam.ceoText') %></p>
      </div>

      <!-- Director General -->
      <div class="team-card">
        <div class="team-card-icon">
          <i class="fas fa-chess-king"></i>
        </div>
        <h3><%= t('aboutTeam.dgTitle') %></h3>
        <span style="color:var(--accent);font-weight:600;display:block;margin-bottom:12px;"><%= t('aboutTeam.dgSubtitle') %></span>
        <p><%= t('aboutTeam.dgText') %></p>
      </div>

      <!-- Finance -->
      <div class="team-card">
        <div class="team-card-icon">
          <i class="fas fa-chart-line"></i>
        </div>
        <h3><%= t('aboutTeam.financeTitle') %></h3>
        <span style="color:var(--accent);font-weight:600;display:block;margin-bottom:12px;"><%= t('aboutTeam.financeSubtitle') %></span>
        <p><%= t('aboutTeam.financeText') %></p>
      </div>

      <!-- Administration -->
      <div class="team-card">
        <div class="team-card-icon">
          <i class="fas fa-building"></i>
        </div>
        <h3><%= t('aboutTeam.adminTitle') %></h3>
        <span style="color:var(--accent);font-weight:600;display:block;margin-bottom:12px;"><%= t('aboutTeam.adminSubtitle') %></span>
        <p><%= t('aboutTeam.adminText') %></p>
      </div>

      <!-- Warehouse -->
      <div class="team-card">
        <div class="team-card-icon">
          <i class="fas fa-warehouse"></i>
        </div>
        <h3><%= t('aboutTeam.warehouseTitle') %></h3>
        <span style="color:var(--accent);font-weight:600;display:block;margin-bottom:12px;"><%= t('aboutTeam.warehouseSubtitle') %></span>
        <p><%= t('aboutTeam.warehouseText') %></p>
      </div>

      <!-- Customer Support -->
      <div class="team-card">
        <div class="team-card-icon">
          <i class="fas fa-headset"></i>
        </div>
        <h3><%= t('aboutTeam.supportTitle') %></h3>
        <span style="color:var(--accent);font-weight:600;display:block;margin-bottom:12px;"><%= t('aboutTeam.supportSubtitle') %></span>
        <p><%= t('aboutTeam.supportText') %></p>
      </div>

    </div>
  </div>
</section>

<!-- CULTURE -->
<section class="section">
  <div class="container">
    <div class="section-header">
      <span class="section-label"><%= t('aboutTeam.cultureLabel') %></span>
      <h2><%= t('aboutTeam.cultureTitle') %></h2>
      <p><%= t('aboutTeam.cultureText') %></p>
    </div>
    <div class="content-grid">
      <div>
        <h3><%= t('aboutTeam.profDevTitle') %></h3>
        <p><%= t('aboutTeam.profDevText') %></p>
      </div>
      <div>
        <h3><%= t('aboutTeam.collabTitle') %></h3>
        <p><%= t('aboutTeam.collabText') %></p>
      </div>
    </div>
  </div>
</section>

<!-- CTA BANNER -->
<section class="cta-banner">
  <div class="container">
    <h2><%= t('aboutTeam.ctaTitle') %></h2>
    <p><%= t('aboutTeam.ctaText') %></p>
    <a href="<%= locals.langPrefix || '' %>/contact" class="btn-primary"><%= t('aboutTeam.ctaButton') %> <i class="fas fa-arrow-right"></i></a>
  </div>
</section>

<%- include('../partials/footer') %>

<%- include('partials/head') %>
<%- include('partials/header') %>

<section class="section" style="min-height:60vh;display:flex;align-items:center">
  <div class="container" style="text-align:center;max-width:600px">
    <div style="width:80px;height:80px;background:var(--accent);border-radius:50%;display:flex;align-items:center;justify-content:center;margin:0 auto 25px">
      <i class="fas fa-check" style="font-size:2.5rem;color:#fff"></i>
    </div>
    <h1 style="font-size:2.2rem;margin-bottom:12px"><%= t('quoteSuccess.heading') %></h1>
    <p style="color:var(--gray);font-size:1.1rem;margin-bottom:30px"><%= t('quoteSuccess.text') %></p>
    <div style="background:var(--light);border-radius:16px;padding:30px;text-align:left;margin-bottom:30px">
      <h3 style="margin-bottom:15px"><%= t('quoteSuccess.whatsNext') %></h3>
      <div style="display:flex;gap:15px;margin-bottom:15px;align-items:start">
        <div style="width:30px;height:30px;min-width:30px;background:var(--primary);color:#fff;border-radius:50%;display:flex;align-items:center;justify-content:center;font-weight:700;font-size:0.85rem">1</div>
        <div><strong><%= t('quoteSuccess.step1Title') %></strong><br><span style="color:var(--gray);font-size:0.9rem"><%= t('quoteSuccess.step1Text') %></span></div>
      </div>
      <div style="display:flex;gap:15px;margin-bottom:15px;align-items:start">
        <div style="width:30px;height:30px;min-width:30px;background:var(--primary);color:#fff;border-radius:50%;display:flex;align-items:center;justify-content:center;font-weight:700;font-size:0.85rem">2</div>
        <div><strong><%= t('quoteSuccess.step2Title') %></strong><br><span style="color:var(--gray);font-size:0.9rem"><%= t('quoteSuccess.step2Text') %></span></div>
      </div>
      <div style="display:flex;gap:15px;align-items:start">
        <div style="width:30px;height:30px;min-width:30px;background:var(--primary);color:#fff;border-radius:50%;display:flex;align-items:center;justify-content:center;font-weight:700;font-size:0.85rem">3</div>
        <div><strong><%= t('quoteSuccess.step3Title') %></strong><br><span style="color:var(--gray);font-size:0.9rem"><%= t('quoteSuccess.step3Text') %></span></div>
      </div>
    </div>
    <div style="display:flex;gap:15px;justify-content:center;flex-wrap:wrap">
      <a href="<%= locals.langPrefix %>/" class="btn-quote"><%= t('quoteSuccess.backHome') %> <i class="fas fa-home"></i></a>
      <a href="<%= locals.langPrefix %>/services" class="btn-outline" style="border-color:var(--primary);color:var(--primary)"><%= t('quoteSuccess.viewServices') %> <i class="fas fa-arrow-right"></i></a>
    </div>
  </div>
</section>

<%- include('partials/footer') %>

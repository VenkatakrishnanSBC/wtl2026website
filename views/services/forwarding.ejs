<%- include('../partials/head') %>
<%- include('../partials/header') %>
<% locals.pageTitle = t('servicesForwarding.pageTitle'); locals.pageSubtitle = t('servicesForwarding.pageSubtitle'); locals.breadcrumb = [{label: t('servicesForwarding.breadcrumbParent'), url: (locals.langPrefix || '') + '/services'}, {label: t('servicesForwarding.breadcrumbCurrent')}]; %>
<%- include('../partials/page-hero') %>

<!-- Overview Section -->
<section class="section" style="padding: 80px 0;">
  <div class="container">
    <div class="about-grid" style="display: grid; grid-template-columns: 1fr 1fr; gap: 40px; align-items: center;">
      <div class="about-text">
        <span class="section-label"><%= t('servicesForwarding.sectionLabel') %></span>
        <h2><%= t('servicesForwarding.overviewTitle') %></h2>
        <p>
          <%= t('servicesForwarding.overviewText1') %>
        </p>
        <p>
          <%= t('servicesForwarding.overviewText2') %>
        </p>
        <p>
          <%= t('servicesForwarding.overviewText3') %>
        </p>
      </div>
      <div class="about-image">
        <img src="/images/608468a5-4b88-4999-85f1-990bf2000d51.jpeg" alt="Freight Forwarding Operations" style="width: 100%; border-radius: 12px; box-shadow: 0 10px 30px rgba(0,0,0,0.12);">
      </div>
    </div>
  </div>
</section>


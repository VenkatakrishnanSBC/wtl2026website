<%- include('../partials/head') %>
<%- include('../partials/header') %>
<% locals.pageTitle = t('servicesOcean.pageTitle'); locals.pageSubtitle = t('servicesOcean.pageSubtitle'); locals.breadcrumb = [{label: t('servicesOcean.breadcrumbParent'), url: (locals.langPrefix || '') + '/services'}, {label: t('servicesOcean.breadcrumbCurrent')}]; %>
<%- include('../partials/page-hero') %>

<!-- Overview Section -->
<section class="section" style="padding: 80px 0;">
  <div class="container">
    <div class="about-grid" style="display: grid; grid-template-columns: 1fr 1fr; gap: 40px; align-items: center;">
      <div class="about-text">
        <span class="section-label"><%= t('servicesOcean.sectionLabel') %></span>
        <h2><%= t('servicesOcean.overviewTitle') %></h2>
        <p>
          <%= t('servicesOcean.overviewText1') %>
        </p>
        <p>
          <%= t('servicesOcean.overviewText2') %>
        </p>
        <p>
          <%= t('servicesOcean.overviewText3') %>
        </p>
      </div>
      <div class="about-image">
        <img src="/images/a-large-tanker-cargo-ship-is-being-renovated-and-painted-in-shipyard-dry-dock.jpg" alt="Ocean Freight - WTL Ship Operations" style="width: 100%; border-radius: 12px; box-shadow: 0 10px 30px rgba(0,0,0,0.12);">
      </div>
    </div>
  </div>
</section>

<!-- Service Options Section -->
<section class="section" style="padding: 80px 0; background: #f8f9fa;">
  <div class="container">
    <div class="section-header" style="text-align: center; margin-bottom: 50px;">
      <span class="section-label"><%= t('servicesOcean.serviceOptions') %></span>
      <h2><%= t('servicesOcean.serviceOptionsTitle') %></h2>
      <p style="max-width: 700px; margin: 0 auto; color: #666;">
        <%= t('servicesOcean.serviceOptionsText') %>
      </p>
    </div>

    <div class="services-grid" style="display: grid; grid-template-columns: repeat(3, 1fr); gap: 30px;">
      <div class="service-card" style="background: #fff; border-radius: 12px; overflow: hidden; box-shadow: 0 5px 20px rgba(0,0,0,0.08);">
        <div class="service-card-body" style="padding: 30px;">
          <h3 style="color: #1a3a5c;"><%= t('servicesOcean.fclTitle') %></h3>
          <p><%= t('servicesOcean.fclText') %></p>
          <ul style="padding-left: 20px; color: #555; margin-top: 15px;">
            <li><%= t('servicesOcean.fclFeature1') %></li>
            <li><%= t('servicesOcean.fclFeature2') %></li>
            <li><%= t('servicesOcean.fclFeature3') %></li>
            <li><%= t('servicesOcean.fclFeature4') %></li>

<!-- CTA Banner -->
<section class="cta-banner" style="padding: 80px 0; background: linear-gradient(135deg, #1a3a5c, #2a5a8c); text-align: center; color: #fff;">
  <div class="container">
    <h2 style="font-size: 2.2rem; margin-bottom: 15px;"><%= t('servicesDistribution.ctaTitle') %></h2>
    <p style="font-size: 1.15rem; margin-bottom: 30px; opacity: 0.9; max-width: 600px; margin-left: auto; margin-right: auto;">
      <%= t('servicesDistribution.ctaText') %>
    </p>
    <a href="<%= locals.langPrefix || '' %>/quote" class="btn-quote" style="display: inline-block; padding: 15px 40px; background: #f0a500; color: #1a3a5c; font-weight: 700; text-decoration: none; border-radius: 8px; font-size: 1.1rem;"><%= t('servicesDistribution.ctaButton') %></a>
  </div>
</section>


<%- include('../partials/head') %>
<%- include('../partials/header') %>
<% locals.pageTitle = t('servicesDistribution.pageTitle'); locals.pageSubtitle = t('servicesDistribution.pageSubtitle'); locals.breadcrumb = [{label: t('servicesDistribution.breadcrumbParent'), url: (locals.langPrefix || '') + '/services'}, {label: t('servicesDistribution.breadcrumbCurrent')}]; %>
<%- include('../partials/page-hero') %>

<!-- Overview Section -->
<section class="section" style="padding: 80px 0;">
  <div class="container">
    <div class="about-grid" style="display: grid; grid-template-columns: 1fr 1fr; gap: 40px; align-items: center;">
      <div class="about-text">
        <span class="section-label"><%= t('servicesDistribution.sectionLabel') %></span>
        <h2><%= t('servicesDistribution.overviewTitle') %></h2>
        <p>
          <%= t('servicesDistribution.overviewText1') %>
        </p>
        <p>
          <%= t('servicesDistribution.overviewText2') %>
        </p>
        <p>
          <%= t('servicesDistribution.overviewText3') %>
        </p>
      </div>
      <div class="about-image">
        <img src="/images/cardboard-boxes-on-shelves-in-warehouse.jpg" alt="Distribution Centre Operations" style="width: 100%; border-radius: 12px; box-shadow: 0 10px 30px rgba(0,0,0,0.12);">
      </div>
    </div>
  </div>
</section>

<!-- Services Section -->
<section class="section" style="padding: 80px 0; background: #f8f9fa;">
  <div class="container">
    <div class="section-header" style="text-align: center; margin-bottom: 50px;">
      <span class="section-label"><%= t('servicesDistribution.whatWeOffer') %></span>
      <h2><%= t('servicesDistribution.servicesTitle') %></h2>
    </div>

    <div class="services-grid" style="display: grid; grid-template-columns: repeat(3, 1fr); gap: 30px;">
      <div class="service-card" style="background: #fff; border-radius: 12px; overflow: hidden; box-shadow: 0 5px 20px rgba(0,0,0,0.08);">
        <div class="service-card-body" style="padding: 30px;">
          <h3 style="color: #1a3a5c;"><%= t('servicesDistribution.fulfilmentTitle') %></h3>
          <p><%= t('servicesDistribution.fulfilmentText') %></p>
          <ul style="padding-left: 20px; color: #555; margin-top: 15px;">
            <li><%= t('servicesDistribution.fulfilmentFeature1') %></li>
            <li><%= t('servicesDistribution.fulfilmentFeature2') %></li>
            <li><%= t('servicesDistribution.fulfilmentFeature3') %></li>
            <li><%= t('servicesDistribution.fulfilmentFeature4') %></li>
            <li><%= t('servicesDistribution.fulfilmentFeature5') %></li>

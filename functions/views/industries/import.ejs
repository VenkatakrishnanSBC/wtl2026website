<!-- CTA Banner -->
<section class="cta-banner" style="padding: 80px 0; background: linear-gradient(135deg, #1a3a5c, #2c5f8a); color: #fff; text-align: center;">
  <div class="container">
    <h2><%= t('industriesImport.ctaTitle') %></h2>
    <p style="max-width: 700px; margin: 20px auto; font-size: 1.1rem; opacity: 0.9;"><%= t('industriesImport.ctaText') %></p>
    <div style="margin-top: 30px;">
      <a href="<%= locals.langPrefix || '' %>/contact/inquiry" class="btn-primary" style="margin-right: 15px;"><%= t('industriesImport.ctaButton1') %></a>
      <a href="<%= locals.langPrefix || '' %>/contact/contact" class="btn-quote"><%= t('industriesImport.ctaButton2') %></a>
    </div>
  </div>
</section>


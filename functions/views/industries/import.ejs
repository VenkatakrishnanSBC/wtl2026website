          <p><%= t('industriesImport.step6Text') %></p>
        </div>
      </div>
    </div>
  </div>
</section>

<!-- Compliance Section -->
<section class="section" style="padding: 80px 0;">
  <div class="container">
    <div class="section-header">
      <div class="section-label"><%= t('industriesImport.complianceLabel') %></div>
      <h2><%= t('industriesImport.complianceTitle') %></h2>
      <p><%= t('industriesImport.complianceSubtitle') %></p>
    </div>
    <div class="why-grid">
      <div class="why-card">
        <div class="why-icon">
          <i class="fas fa-file-alt"></i>

<%- include('../partials/head') %>
<%- include('../partials/header') %>
<% locals.pageTitle = t('industriesImport.pageTitle'); locals.pageSubtitle = t('industriesImport.pageSubtitle'); locals.breadcrumb = [{label: t('industriesImport.breadcrumbParent'), url: (locals.langPrefix || '') + '/industries'}, {label: t('industriesImport.breadcrumbCurrent')}]; %>
<%- include('../partials/page-hero') %>

<!-- Overview Section -->
<section class="section" style="padding: 80px 0;">
  <div class="container">
    <div class="about-grid">
      <div class="about-text">
        <div class="section-label"><%= t('industriesImport.overviewLabel') %></div>
        <h2><%= t('industriesImport.overviewTitle') %></h2>
        <p><%= t('industriesImport.overviewText1') %></p>
        <p><%= t('industriesImport.overviewText2') %></p>
        <p><%= t('industriesImport.overviewText3') %></p>
      </div>
      <div class="about-image">
        <img src="/images/608468a5-4b88-4999-85f1-990bf2000d51.jpeg" alt="<%= t('industriesImport.overviewImageAlt') %>">
      </div>
    </div>
  </div>
</section>


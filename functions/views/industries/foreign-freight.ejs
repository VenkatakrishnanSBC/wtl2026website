<%- include('../partials/head') %>
<%- include('../partials/header') %>
<% locals.pageTitle = t('industriesForeign.pageTitle'); locals.pageSubtitle = t('industriesForeign.pageSubtitle'); locals.breadcrumb = [{label: t('industriesForeign.breadcrumbParent'), url: (locals.langPrefix || '') + '/industries'}, {label: t('industriesForeign.breadcrumbCurrent')}]; %>

        <p><%= t('industriesForeign.overviewText1') %></p>
        <p><%= t('industriesForeign.overviewText2') %></p>
        <p><%= t('industriesForeign.overviewText3') %></p>
      </div>
      <div class="about-image">
        <img src="/images/aerial-view-of-containers-loading-and-unloading-to-the-ship-in-the-sea-port-logistic-and.jpg" alt="<%= t('industriesForeign.overviewImageAlt') %>">
      </div>
    </div>
  </div>
</section>


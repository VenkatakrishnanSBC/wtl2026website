<!-- COOKIE CONSENT BANNER -->
<div class="cookie-consent" id="cookieConsent">
  <div class="cookie-consent-inner">
    <div class="cookie-consent-text">
      <i class="fas fa-cookie-bite"></i>
      <p><%= locals.t ? t('cookie.message') : 'We use cookies to enhance your experience and analyze site traffic. By clicking "Accept All", you consent to our use of cookies.' %></p>
    </div>
    <div class="cookie-consent-actions">
      <button class="cookie-btn cookie-btn-reject" id="cookieReject"><%= locals.t ? t('cookie.rejectAll') : 'Reject All' %></button>
      <button class="cookie-btn cookie-btn-accept" id="cookieAccept"><%= locals.t ? t('cookie.acceptAll') : 'Accept All' %></button>
    </div>
  </div>
</div>

<% if (locals.lang && locals.t) { %>
<script>
  window.__lang = '<%= locals.lang %>';
  window.__langPrefix = '<%= locals.langPrefix || "" %>';
  window.__testimonials = <%- JSON.stringify(t('testimonials')) %>;
</script>
<% } %>
<script src="/js/main.js"></script>
<script>
window.addEventListener('load', function() {
  var loader = document.getElementById('pageLoader');
  if (loader) {
    setTimeout(function() { loader.classList.add('loaded'); }, 300);
  }
});

// Cookie consent
(function() {
  var banner = document.getElementById('cookieConsent');
  var acceptBtn = document.getElementById('cookieAccept');
  var rejectBtn = document.getElementById('cookieReject');

  if (document.cookie.indexOf('wtl_consent=') !== -1) {
    banner.style.display = 'none';
    return;
  }

  banner.classList.add('visible');

  acceptBtn.addEventListener('click', function() {
    document.cookie = 'wtl_consent=granted;path=/;max-age=' + (365*24*60*60) + ';SameSite=Lax';
    gtag('consent', 'update', {
      'ad_storage': 'granted',
      'ad_user_data': 'granted',
      'ad_personalization': 'granted',
      'analytics_storage': 'granted'
    });
    banner.classList.remove('visible');
  });

  rejectBtn.addEventListener('click', function() {
    document.cookie = 'wtl_consent=denied;path=/;max-age=' + (365*24*60*60) + ';SameSite=Lax';
    banner.classList.remove('visible');
  });
})();
</script>

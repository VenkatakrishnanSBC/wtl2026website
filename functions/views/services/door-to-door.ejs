<%- include('../partials/head') %>
<%- include('../partials/header') %>
<% locals.pageTitle = t('servicesDoorToDoor.pageTitle'); locals.pageSubtitle = t('servicesDoorToDoor.pageSubtitle'); locals.breadcrumb = [{label: t('servicesDoorToDoor.breadcrumbParent'), url: (locals.langPrefix || '') + '/services'}, {label: t('servicesDoorToDoor.breadcrumbCurrent')}]; %>
<%- include('../partials/page-hero') %>

<!-- Overview Section -->
<section class="section" style="padding: 80px 0;">
  <div class="container">
    <div class="about-grid" style="display: grid; grid-template-columns: 1fr 1fr; gap: 40px; align-items: center;">
      <div class="about-text">
        <span class="section-label"><%= t('servicesDoorToDoor.sectionLabel') %></span>
        <h2><%= t('servicesDoorToDoor.overviewTitle') %></h2>
        <p>
          <%= t('servicesDoorToDoor.overviewText1') %>
        </p>
        <p>
          <%= t('servicesDoorToDoor.overviewText2') %>
        </p>
        <p>
          <%= t('servicesDoorToDoor.overviewText3') %>
        </p>
      </div>
      <div class="about-image">
        <img src="/images/634ab3e0-733d-430f-8c37-31a6e151f386.jpeg" alt="Door-to-Door Logistics Operations" style="width: 100%; border-radius: 12px; box-shadow: 0 10px 30px rgba(0,0,0,0.12);">
      </div>
    </div>
  </div>
</section>

<!-- How It Works Section -->
<section class="section" style="padding: 80px 0; background: #f8f9fa;">
  <div class="container">
    <div class="section-header" style="text-align: center; margin-bottom: 50px;">
      <span class="section-label"><%= t('servicesDoorToDoor.processLabel') %></span>
      <h2><%= t('servicesDoorToDoor.processTitle') %></h2>
      <p style="max-width: 700px; margin: 0 auto; color: #666;">
        <%= t('servicesDoorToDoor.processText') %>
      </p>
    </div>

    <div class="services-grid" style="display: grid; grid-template-columns: repeat(4, 1fr); gap: 25px;">
      <div class="service-card" style="background: #fff; border-radius: 12px; overflow: hidden; box-shadow: 0 5px 20px rgba(0,0,0,0.08); text-align: center;">
        <div class="service-card-body" style="padding: 30px;">
          <div style="width: 60px; height: 60px; background: #1a3a5c; color: #fff; border-radius: 50%; display: flex; align-items: center; justify-content: center; font-size: 1.5rem; font-weight: 700; margin: 0 auto 20px;">1</div>
          <h3 style="color: #1a3a5c; font-size: 1.2rem;"><%= t('servicesDoorToDoor.step1Title') %></h3>
          <p><%= t('servicesDoorToDoor.step1Text') %></p>
        </div>
      </div>

      <div class="service-card" style="background: #fff; border-radius: 12px; overflow: hidden; box-shadow: 0 5px 20px rgba(0,0,0,0.08); text-align: center;">
        <div class="service-card-body" style="padding: 30px;">
          <div style="width: 60px; height: 60px; background: #1a3a5c; color: #fff; border-radius: 50%; display: flex; align-items: center; justify-content: center; font-size: 1.5rem; font-weight: 700; margin: 0 auto 20px;">2</div>
          <h3 style="color: #1a3a5c; font-size: 1.2rem;"><%= t('servicesDoorToDoor.step2Title') %></h3>
          <p><%= t('servicesDoorToDoor.step2Text') %></p>
        </div>
      </div>

      <div class="service-card" style="background: #fff; border-radius: 12px; overflow: hidden; box-shadow: 0 5px 20px rgba(0,0,0,0.08); text-align: center;">
        <div class="service-card-body" style="padding: 30px;">
          <div style="width: 60px; height: 60px; background: #1a3a5c; color: #fff; border-radius: 50%; display: flex; align-items: center; justify-content: center; font-size: 1.5rem; font-weight: 700; margin: 0 auto 20px;">3</div>
          <h3 style="color: #1a3a5c; font-size: 1.2rem;"><%= t('servicesDoorToDoor.step3Title') %></h3>
          <p><%= t('servicesDoorToDoor.step3Text') %></p>
        </div>
      </div>

      <div class="service-card" style="background: #fff; border-radius: 12px; overflow: hidden; box-shadow: 0 5px 20px rgba(0,0,0,0.08); text-align: center;">
        <div class="service-card-body" style="padding: 30px;">
          <div style="width: 60px; height: 60px; background: #1a3a5c; color: #fff; border-radius: 50%; display: flex; align-items: center; justify-content: center; font-size: 1.5rem; font-weight: 700; margin: 0 auto 20px;">4</div>
          <h3 style="color: #1a3a5c; font-size: 1.2rem;"><%= t('servicesDoorToDoor.step4Title') %></h3>
          <p><%= t('servicesDoorToDoor.step4Text') %></p>
        </div>
      </div>
    </div>
  </div>
</section>

<!-- Benefits Section -->
<section class="section" style="padding: 80px 0;">
  <div class="container">
    <div class="section-header" style="text-align: center; margin-bottom: 50px;">
      <span class="section-label"><%= t('servicesDoorToDoor.benefitsLabel') %></span>

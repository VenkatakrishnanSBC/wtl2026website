<%- include('../partials/head') %>
<%- include('../partials/header') %>
<% locals.pageTitle = t('contactLocations.pageTitle'); locals.pageSubtitle = t('contactLocations.pageSubtitle'); locals.breadcrumb = [{label: t('contactLocations.breadcrumbParent'), url: (locals.langPrefix || '') + '/contact'}, {label: t('contactLocations.breadcrumbCurrent')}]; %>
<%- include('../partials/page-hero') %>

<!-- Headquarters Section -->
<section class="section" style="padding: 80px 0;">
  <div class="container">
    <div class="about-grid">
      <div class="about-text">
        <div class="section-label"><%= t('contactLocations.headquartersLabel') %></div>
        <h2><%= t('contactLocations.headquartersHeading') %></h2>
        <p><%= t('contactLocations.headquartersText1') %></p>
        <p><%= t('contactLocations.headquartersText2') %></p>

        <div style="margin-top: 30px; background: #f8f9fa; padding: 25px; border-radius: 8px; border-left: 4px solid #1a3a5c;">
          <h4 style="margin-bottom: 15px; color: #1a3a5c;"><%= t('contactLocations.headOfficeDetails') %></h4>
          <p style="margin-bottom: 8px;"><i class="fas fa-map-marker-alt" style="width: 20px; color: #1a3a5c;"></i> <strong><%= t('contactLocations.labelAddress') %></strong> RUE Du Liban X Brazza, Dakar, Senegal</p>
          <p style="margin-bottom: 8px;"><i class="fas fa-phone-alt" style="width: 20px; color: #1a3a5c;"></i> <strong><%= t('contactLocations.labelPhone') %></strong> <a href="tel:+221338227111" style="color: inherit; text-decoration: none;">+221 33 822 71 11</a></p>
          <p style="margin-bottom: 8px;"><i class="fas fa-envelope" style="width: 20px; color: #1a3a5c;"></i> <strong><%= t('contactLocations.labelEmail') %></strong> <a href="mailto:info@worldtransgroup.com" style="color: inherit; text-decoration: none;">info@worldtransgroup.com</a></p>
          <p style="margin-bottom: 8px;"><i class="fas fa-clock" style="width: 20px; color: #1a3a5c;"></i> <strong><%= t('contactLocations.labelHours') %></strong> <%= t('contactLocations.hoursValue') %></p>
        </div>
      </div>
      <div class="about-image">
        <img src="/images/853d7894-c185-403b-896f-a5b174ab99e8.jpeg" alt="WTL Head Office in Dakar, Senegal">
      </div>
    </div>
  </div>
</section>


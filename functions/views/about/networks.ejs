<%- include('../partials/head') %>
<%- include('../partials/header') %>
<% locals.pageTitle = t('aboutNetworks.pageTitle'); locals.pageSubtitle = t('aboutNetworks.pageSubtitle'); locals.breadcrumb = [{label: t('aboutNetworks.breadcrumbParent'), url: (locals.langPrefix || '') + '/about'}, {label: t('aboutNetworks.breadcrumbCurrent')}]; %>
<%- include('../partials/page-hero') %>

<!-- NETWORK OVERVIEW -->
<section class="section">
  <div class="container">
    <div class="about-grid">
      <div class="about-image">
        <img src="/images/aerial-view-of-containers-loading-and-unloading-to-the-ship-in-the-sea-port-logistic-and.jpg" alt="Aerial view of container port operations">
      </div>
      <div class="about-text">
        <span class="section-label"><%= t('aboutNetworks.networkLabel') %></span>
        <h2><%= t('aboutNetworks.networkTitle') %></h2>
        <p><%= t('aboutNetworks.networkP1') %></p>
        <p><%= t('aboutNetworks.networkP2') %></p>
        <p><%= t('aboutNetworks.networkP3') %></p>
      </div>
    </div>
  </div>
</section>

